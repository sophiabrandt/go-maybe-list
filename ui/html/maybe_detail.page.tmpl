{{template "base" .}}

{{define "title"}}Maybe #{{.Maybe.ID}}{{end}}

{{define "main"}}
{{$csrf_token := .CSRFToken}}
  <div class="center">
    <div class="grid stack">
      {{with .Maybe}}
      <div class="box">
        <div class="stack mb">
          <h3>{{.Title}}</h3>
          <p><a href="{{.Url}}">{{.Url}}</a></p>
          <p>{{.Description}}</p>
        </div>
        {{range .Tags}}
        <a href="/tags/view/{{.ID}}" class="tag">#{{.Name}}</a>
        {{end}}
      </div>
      <div class="cluster center">
        <div>
          <div>
            <a href="/maybes/update/{{.ID}}"><button>Update üñâ</button></a>
          </div>
          <form action="/maybes/delete/{{.ID}}" method="POST">
            <input type="hidden" name="csrf_token" value="{{$csrf_token}}" />
            <button class="danger--button" type="submit">Delete ‚ö†Ô∏è</button>
          </form>
        </div>
      </div>
      {{end}}
    </div>
  </div>
{{end}}
